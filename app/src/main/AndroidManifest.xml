<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.chengw.autocallrecorder" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>

        <!-- register my broadcast receiver -->
        <receiver
            android:name="com.chengw.autocallrecorder.TelListenerReceiver"
            android:enabled="true" >
            <intent-filter>
                <action android:name="android.intent.action.PHONE_STATE" />
                <action android:name="android.intent.action.NEW_OUTGOING_CALL" />
                <action android:name="android.intent.action.CAL" />
            </intent-filter>
        </receiver>

        <!-- register my listener service -->
        <service
            android:name="com.chengw.autocallrecorder.TelListenerService"
            android:enabled="true"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.chengw.autocallrecorder.tellistner" />
            </intent-filter>
        </service>
    </application>

</manifest>
